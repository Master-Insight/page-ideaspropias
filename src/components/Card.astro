---
const { data } = Astro.props;
const { title, subtitle, img, url = "#" } = data;
---

<section
  class="w-72 h-72 relative flex flex-col justify-center items-center text-center mb-4 p-4 bg-primary-lightershadow-glow rounded-lg"
  style=`background-image: url('${img}'); background-size: cover ; background-position: center;`
>
  {/* Capa de atenuación */}
  <div class="absolute inset-0 bg-primary-lighter opacity-70 rounded-lg">
    <div
      class="w-72 h-72 flex flex-col items-center justify-center relative z-10"
    >
      <h3 class="text-3xl font-subtitle font-semibold">{title}</h3>
      <p class="text-xl">{subtitle}</p>

      {/* Botón opcional con enlace */}
      <a
        href={url}
        class="mt-6 inline-block bg-primary text-white py-3 px-6 rounded hover:bg-primary-dark"
      >
        Ver más
      </a>
    </div>
  </div>
</section>
