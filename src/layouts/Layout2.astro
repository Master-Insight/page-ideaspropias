---
import "@fontsource/roboto";
import "@fontsource/francois-one";
import "@fontsource/poiret-one";

import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Consultora especializada en ventas" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="flex gap-4 p-3">
      <a class="hecho" href="/components/hero">hero</a>
      <a class="hecho" href="/components/banners">banners</a>
      <a class="hecho" href="/components/box">box</a>
      <a href="/components/cards">cards</a>
      <a href="/components/columns">columns</a>
      <a href="/components/columns">grid cards</a>
      <a href="/components/columns">modal</a>
      <a href="/components/columns">buttons</a>
    </div>
    <main>
      <slot />
    </main>
  </body>
  <Footer />
</html>

<style>
  html {
    @apply flex flex-col max-w-full;
  }

  body {
    @apply flex flex-col max-w-full my-8;
  }

  body > div {
    @apply container;
  }
  a {
    @apply p-2 border border-black rounded-lg;
  }
  .hecho {
    @apply bg-green-600 border-none;
  }
</style>
