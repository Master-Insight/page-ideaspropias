---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import { config } from "config";

const SERVICES = config.servicios;
// bg-complementary-lighter
---

<Layout title="Servicios - Ideas Propias">
  <!-- Hero -->
  <section
    class="relative h-144 flex flex-col justify-center items-center text-center mb-4 bg-primary-lighter shadow-glow shadow-gray-300"
    style={`background-image: url('${config.images.services[0]}'); background-size: cover ; background-position: top;`}
  >
    {/* Capa de atenuación */}
    <div
      class={"absolute inset-0 bg-gradient-to-tl from-complementary via-complementary-light via-complementary-light to-complementary-lighter opacity-50"}
    >
    </div>

    <div class="relative w-full z-10">
      {/* Esto asegura que el contenido quede encima de la capa */}

      <p
        class="text-4xl md:text-7xl w-3/4 mx-auto font-title text-primary-dark"
      >
        Acompañamos tu camino
      </p>

      {/* Subtítulo opcional */}
      <p class="bg-primary p-4 text-3xl font-subtitle font-bold mt-6">
        Ve nuestras opciones
      </p>
    </div>
  </section>

  <!-- Services -->
  <section class="mt-36">
    <h2 class="text-7xl font-title text-center">Nuestros Servicios</h2>

    <div
      class="grid mt-12 mx-auto max-w-7xl justify-items-center sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4"
    >
      {SERVICES.map((service) => <Card data={service} />)}
    </div>
  </section>
</Layout>
