---
import Layout from "@/layouts/Layout2.astro";
import UiBanner from "@/ui/Banners/Banner.astro";
import UiImgBanner from "@/ui/Banners/Img.Banner.astro";

const colors = [
  "transparent",
  "primary",
  "secondary",
  "tertiary",
  "complementary",
  "black",
  "white",
];
const color = colors[1];
---

<Layout title="Components">
  <UiBanner colorScheme={color}> <p>Example</p><p>Example</p></UiBanner>
  <UiBanner colorScheme={color} darkMode shadow
    ><p>Example</p><p>Example</p><p>Example</p></UiBanner
  >
  <UiImgBanner overlay backgroundImage="/images/hero_inicio.jpeg"
    ><p>Example</p><p>Example</p></UiImgBanner
  >
  <UiImgBanner backgroundImage="/images/hero_inicio.jpeg" overlay darkMode
    ><p>Example</p><p>Example</p><p>Example</p><p>Example</p></UiImgBanner
  >
</Layout>
